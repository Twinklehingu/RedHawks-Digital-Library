@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.UpdateModel

@{
    ViewData["Title"] = "Update page";
}
@if (string.IsNullOrEmpty(Model.Product.Title))
{
    <h1>Create</h1>
}
else
{
    <h1>Update</h1>
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.Title" class="control-label"></label>
            <input asp-for="Product.Title" class="form-control" placeholder="Enter Title" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Description" class="control-label"></label>
            <textarea asp-for="Product.Description" class="form-control" placeholder="Enter Description"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Author" class="control-label"></label>
            <input asp-for="Product.Author" class="form-control" placeholder="Enter Author(s)" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Author_Description" class="control-label">Author Description</label>
            <textarea asp-for="Product.Author_Description" class="form-control" placeholder="Enter Description"></textarea>
            <span asp-validation-for="Product.Author_Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Url" class="control-label"></label>
            <input asp-for="Product.Url" class="form-control" placeholder="Enter URL" />
            <span asp-validation-for="Product.Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Image" class="control-label"></label>
            <input asp-for="Product.Image" class="form-control" placeholder="Enter Image" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-primary"> Cancel </a>
        </div>

    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}